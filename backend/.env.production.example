# Backend Environment Variables - PRODUCTION
# Copy these to Vercel backend project environment variables

# Database - Use Vercel Postgres connection string
DATABASE_URL=postgres://user:password@host:5432/database?sslmode=require

# Security
JWT_SECRET=generate-strong-secret-for-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Tilopay Payment Processing (PRODUCTION KEYS)
TILOPAY_API_KEY=your-production-api-key
TILOPAY_MERCHANT_KEY=your-production-merchant-key
TILOPAY_WEBHOOK_SECRET=your-production-webhook-secret
TILOPAY_BASE_URL=https://api.tilopay.com/v1

# Email
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@satyoga.org
FROM_NAME=Sat Yoga Institute

# Analytics
MIXPANEL_TOKEN=your-production-mixpanel-token
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=your-ga4-api-secret

# Cloudflare (for video/media)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# YouTube (optional)
YOUTUBE_API_KEY=your-youtube-api-key

# Frontend URL and CORS
FRONTEND_URL=https://your-app.vercel.app
CORS_ORIGINS=https://your-app.vercel.app
ALLOWED_ORIGINS=https://your-app.vercel.app

# Application Settings
ENVIRONMENT=production
DEBUG=False
API_V1_PREFIX=/api
PROJECT_NAME=Sat Yoga Platform
