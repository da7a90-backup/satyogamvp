# Backend Environment Variables - STAGING
# Copy these to Vercel backend project environment variables (staging)

# Database - Use Vercel Postgres staging connection string
DATABASE_URL=postgres://user:password@host:5432/database_staging?sslmode=require

# Security (use different secrets from production)
JWT_SECRET=generate-different-secret-for-staging
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Tilopay Payment Processing (TEST KEYS)
TILOPAY_API_KEY=your-test-api-key
TILOPAY_MERCHANT_KEY=your-test-merchant-key
TILOPAY_WEBHOOK_SECRET=your-test-webhook-secret
TILOPAY_BASE_URL=https://app.tilopay.com/api/v1

# Email
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@satyoga.org
FROM_NAME=Sat Yoga Institute (Staging)

# Analytics (use separate project for staging)
MIXPANEL_TOKEN=your-staging-mixpanel-token
GA4_MEASUREMENT_ID=G-STAGING-XXXXXX
GA4_API_SECRET=your-staging-ga4-secret

# Cloudflare (for video/media)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# YouTube (optional)
YOUTUBE_API_KEY=your-youtube-api-key

# Frontend URL and CORS
FRONTEND_URL=https://your-app-staging.vercel.app
CORS_ORIGINS=https://your-app-staging.vercel.app
ALLOWED_ORIGINS=https://your-app-staging.vercel.app

# Application Settings
ENVIRONMENT=staging
DEBUG=True
API_V1_PREFIX=/api
PROJECT_NAME=Sat Yoga Platform (Staging)
